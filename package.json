{
  "private": true,
  "version": "0.4.0",
  "description": "experimental widgets",
  "main": "index.js",
  "repository": "https://github.com/deathbeds/wxyz",
  "author": "deadpixels@googlegroups.com",
  "license": "BSD-3-Clause",
  "scripts": {
    "bootstrap": "jlpm cache clean && jlpm clean && jlpm --prefer-offline && lerna bootstrap && jlpm build",
    "clean": "lerna exec --parallel --stream rimraf lib *.tgz",
    "build": "jlpm build:ts && jlpm build:tgz",
    "build:ts": "lerna run --parallel --stream build",
    "build:tgz": "lerna exec --parallel --stream npm pack",
    "lint:prettier": "prettier --write ./*.{json,md,yml,yaml} ./{src,ci}/**/*.{ts,json,md,yml,yaml,css,yml}",
    "lint:ts": "tslint --fix src/**/*.ts",
    "lint": "jlpm lint:prettier && jlpm lint:ts",
    "watch": "lerna run --parallel --stream watch"
  },
  "devDependencies": {
    "lerna": "^3.19.0",
    "prettier": "^1.19.1",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^4.1.0",
    "jquery": "^3.4.1",
    "fstream": "^1.0.12"
  },
  "workspaces": [
    "src/ts/wxyz-*"
  ]
}
