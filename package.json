{
  "private": true,
  "version": "0.4.0",
  "description": "experimental widgets",
  "main": "index.js",
  "repository": "https://github.com/deathbeds/wxyz",
  "author": "deadpixels@googlegroups.com",
  "license": "BSD-3-Clause",
  "scripts": {
    "bootstrap": "jlpm --prefer-offline && jlpm clean && lerna bootstrap && jlpm build",
    "clean": "lerna exec --parallel --stream rimraf lib *.tgz",
    "build": "jlpm build:ts && jlpm build:tgz",
    "build:ts": "lerna run --parallel --stream build",
    "build:tgz": "lerna exec --parallel --stream npm pack",
    "lint:prettier": "prettier --list-different --write \"./*.{json,md,yml}\" \"./{src,ci,reqs}/**/*.{ts,json,md,yml,yaml,css,yml}\"",
    "lint:ts": "eslint --config .eslintrc.js --ext .js,.jsx,.ts,.tsx --fix src/ts/*/src",
    "lint": "jlpm lint:prettier && jlpm lint:ts",
    "watch": "lerna run --parallel --stream watch"
  },
  "prettier": {
    "singleQuote": true,
    "semi": true,
    "tabWidth": 2
  },
  "devDependencies": {
    "lerna": "^3.19.0",
    "jquery": "^3.4.1",
    "prettier": "^2.2.1",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "fstream": "^1.0.12"
  },
  "workspaces": [
    "src/ts/wxyz-*"
  ]
}
